{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build snake (static, PDCurses parent)",
			"type": "shell",
			"command": "gcc",
			"args": [
				"-std=c11",
				"-O2",
				"-Wall",
				"-Wextra",
				"-Wno-unused-parameter",
				"-I",
				".",
				"-I",
				"PDCurses",
				"-I",
				"PDCurses/pdcurses",
				"-I",
				"PDCurses/wincon",
				"main.c",
				"colors.c",
				"PDCurses/pdcurses/*.c",
				"PDCurses/wincon/*.c",
				"-o",
				"snake.exe",
				"-static",
				"-luser32",
				"-lgdi32"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build snake (debug)",
			"type": "shell",
			"command": "gcc",
			"args": [
				"-std=c11",
				"-g",
				"-O0",
				"-Wall",
				"-Wextra",
				"-Wno-unused-parameter",
				"-I",
				".",
				"-I",
				"PDCurses",
				"-I",
				"PDCurses/pdcurses",
				"-I",
				"PDCurses/wincon",
				"main.c",
				"colors.c",
				"PDCurses/pdcurses/*.c",
				"PDCurses/wincon/*.c",
				"-o",
				"snake.exe",
				"-static",
				"-luser32",
				"-lgdi32"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		}
	]
}